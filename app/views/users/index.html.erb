<div class  = "container px-5 px-sm-0">
<div class = "row">
<div class = "col-md-3 ">
<!--User infoを部分テンプレートで持ってきてる-->
<%= render 'user', user: @user %>
<!--New bookを部分テンプレートで持ってきてる-->
<%= render 'books/book', book: @book %>


<div class = "col-md-8 offset-md-1">
<h1>Users</h1>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <tbody> 
   <% @books.each do |book| %>
   <tr>
   <td><%= image_tag book.user.get_profile_image(100,100) %></td>
  
   <td><%= book.user.name %></td>
     
   <td><%= link_to "Show", user_path(book.user_id) %>  </td> 

   </tr>
<% end %>

 </tbody>
</table>


</div>
</div>
</div>