<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <header>
       <nav class = "navbar navbar-expand-lg navbar-light bg-dark">
      <div class = "container">
      <% if user_signed_in? %>
      
    
      <%= link_to 'Bookers ', root_path %>    
      
      
       <div class = "collapse navbar-collapse" id="navbarNavDropdown">
       <ul class ="navbar-nav ml-auto">
         
       <li><%= link_to  user_path(current_user.id) do %>  
        <i class="fas fa-home"></i>Home
       <% end %>
       </li>
         
       <li><%= link_to  users_path do %>  
        <i class="fas fa-users"></i>Users
       <% end %>
       </li>
      
      
      <li><%= link_to  books_path do %>  
        <i class="fas fa-book-open"></i>Books
       <% end %>
       </li>
      
       <li><%= link_to  destroy_user_session_path, method: :delete do %>  
        <i class="fas fa-sign-out-alt"></i>Log out
       <% end %>
       </li>
        
       </ul>
       
  </div>
        
        
      <% else %>
      
      <%= link_to 'Bookers', root_path %>    
      
      
       <div class = "collapse navbar-collapse" id="navbarNavDropdown">
       <ul class ="navbar-nav ml-auto">
         
    
       <li><%= link_to  root_path do %>  
        <i class="fas fa-home"></i>Home
       <% end %>
       </li>
      
      <li><%= link_to  about_path do %>  
        <i class="fas fa-link "></i>About
       <% end %>
       </li>
      
      <li><%= link_to  new_user_registration_path do %>  
        <i class="fas fa-user-plus "></i>Sign up
       <% end %>
       </li>
     
      
      <li><%= link_to  new_user_session_path do %>  
        <i class="fas fa-sign-in-alt "></i>Log in
       <% end %>
       </li>
      
      
      </ul>
  </div>
      <% end %>
      
     </header>
    <%= yield %>
  </body>
  
  
  <footer>
    <div class = "container mt-5">
     <div class= "row">
      <div class = "mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
      </div>
  </footer>
</html>
